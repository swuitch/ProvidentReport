@Styles.Render("~/AdminLTE/plugins/datatables/styles")
@{
    ViewBag.Title = "User Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="loading" id="loading" name="loading"></div>
<div id="overlay"></div>
<div class="box">

    <!-- /.box-header -->
    <div class="box-body">
        <button type="button" id="newuser" class="btn btn-primary" data-toggle="modal" data-target="#modal-view-pr" data-backdrop="static" data-keyboard="false">
            New User
        </button>
        <table id="data-table" class="table table-striped table-responsive table-bordered table-hover">
            <thead>
            <tr>
                <th width="500px">Username</th>
                <th width="190px">Hub</th>
                <th width="190px">Branch</th>
                <th width="90px"></th>
            </tr>
            </thead>
            <tbody></tbody>

        </table>


    </div>
    <!-- /.box-body -->
</div>


@*MODALS!*@
<div class="modal fade" id="modal-view-pr">
    <div class="modal-dialog">
        <form action="" role="form" id="form">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="modal-title"></h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-horizontal">
                                <label class="control-label">Supply Code:</label>
                                <input type="hidden" class="form-control" placeholder="Code" id="id" value="0" />
                                <label id="code"></label> <br />
                                <label class="control-label">Supply Type</label>
                                <select class="form-control" id="supplytype" onchange="generateSupplyCode(false)" required="required"></select>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <label class="control-label">Supply Description</label>
                                        <textarea class="form-control" rows="2" style="resize: none;" id="desc" required="required"></textarea>
                                    </div>
                                    <div class="col-lg-4">
                                        <span class="text-bold">UOM Delivery</span>
                                        <select class="form-control" id="containertype" required="required"></select>
                                    </div>
                                    <div class="col-lg-3" style="margin-top: -6px">
                                        <label class="control-label">UOM Issuance</label>
                                        <select class="form-control" id="unittype" required="required"></select>
                                    </div>
                                    <div class="col-lg-4">
                                        <span class="text-bold">Conversion Factor</span>
                                        <input type="text" class="form-control numeric" id="nopcs" pattern="[1-9]+" />
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-horizontal">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <span class="text-bold">Reorder point</span>
                                        <input type="text" class="form-control numeric" id="roqty" />
                                    </div>
                                    @*<div class="col-lg-4">
                                            <label class="control-label">Reorder Stock Qty</label>
                                            <input type="text" class="form-control" id="rostockqty"/>
                                        </div>*@
                                    <div class="col-lg-4">
                                        <label for="statuscode">Status</label>
                                        <select class="form-control" id="statuscode" required="required" style="margin-top: -6px"></select>
                                    </div>
                                    <div class="col-lg-4" style="margin-top: 20px">

                                        <input type="checkbox" id="perishable" name="perishable" /> &nbsp;<label for="perishable">With Expiration</label>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnAdd">Save</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </form>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
@section Scripts {
    @RenderPage("~/Views/UserAccounts/IndexScript.cshtml")
}
